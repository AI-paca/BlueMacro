<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlueMacro" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/gray</item>
        <item name="colorPrimary">@color/charcoal</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/gray_white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- NavigationView styles -->
        <item name="navigationViewStyle">@style/MyNavigationViewStyle</item>
    </style>

    <!-- NavigationView styles -->
    <style name="MyNavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/gray</item>
        <item name="itemTextColor">@color/charcoal</item>
    </style>

    <style name="Theme.BlueMacro.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BlueMacro.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BlueMacro.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>